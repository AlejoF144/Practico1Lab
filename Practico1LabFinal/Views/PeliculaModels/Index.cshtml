@model IEnumerable<Practico1LabFinal.Models.PeliculaModel>

@{
	ViewData["Title"] = "Index";
}

<h1>Películas</h1>

<p>
	<a class="btn btn-primary" asp-action="Create">Agregar Nueva Película</a>
</p>

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-md-4">
			<div class="card mb-4 shadow-sm">
				@* Mostrar la portada de la película como imagen *@
				<a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id"> <!--Esto es el punto 4, falta agregar imagen-->
					<img src="@item.Portada" alt="Portada de @item.Titulo" style="height: 300px; object-fit: cover;"> 
				</a>

				<div class="card-body">
					<h5 class="card-title">@item.Titulo</h5>
					<p class="card-text">
						<strong>Género:</strong> @item.Genero.Descripcion<br />
						<strong>Fecha de Estreno:</strong> @item.FechaEstreno.ToShortDateString()<br />
						<strong>Resumen:</strong> @item.Resumen
					</p>
					<div class="d-flex justify-content-between align-items-center">
						<div class="btn-group">
							<a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Ver Detalles</a>
							<a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
							<a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
</div>
